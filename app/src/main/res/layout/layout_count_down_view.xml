<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp">

        <ProgressBar
            android:id="@+id/view_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/drawable_circular_progress"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loot"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvMinutes"
            android:layout_toEndOf="@+id/tvMinutes" />

        <TextView
            android:id="@+id/tvSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:text="00"
            android:textColor="#FFFF"
            tools:layout_editor_absoluteY="82dp"
            app:layout_constraintLeft_toLeftOf="@+id/tvMinutes"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignBaseline="@+id/tvMinutes"
            android:layout_alignBottom="@+id/tvMinutes"
            android:layout_toRightOf="@+id/loot"
            android:layout_toEndOf="@+id/loot" />

        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="16dp"
            android:textColor="#FFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:text="5"
            android:textColor="#FFFF"
            tools:layout_editor_absoluteX="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_progress_bar"
            app:layout_constraintVertical_bias="0.54"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4" />

    </RelativeLayout>

</merge>